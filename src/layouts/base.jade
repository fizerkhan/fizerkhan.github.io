//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="/#{post.url}")
      h1.post-title= post.title
    h2.post-date!= [post.date.getUTCFullYear(), post.date.getMonth() + 1, post.date.getDate()].join(' &#183; ')

mixin post(post)
  mixin postHead(post)
  .post-body!= post.content

doctype 5
html
  head
    meta(charset="utf8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon", type="image/png", href="/images/cabin.png")
    link(href="/styles/main.css", rel="stylesheet")
    block title
      title= "Fizer Khan Blog"
  body
    nav#nav
      h1.name
        a(href="/") Fizer Khan
      ul.nav-links
        li.menu.icon-menu
        li.text-link
          a(href="/about.html") About
        li.text-link
          a(href="/projects.html") Projects
        li.text-link
          a(href="/archives.html") Archives

      .social-media
        a.icon-github(href="https://github.com/fizerkhan")
        a.icon-twitter(href="https://twitter.com/fizerkhan")
        a.icon-facebook(href="http://facebook.com/fizerface")

    .content
      block content
    a(href="http://www.fizerkhan.com/")
      img.cabin(src="/images/cabin.png")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js")
    script(src="/scripts/main.js")
    include analytics
